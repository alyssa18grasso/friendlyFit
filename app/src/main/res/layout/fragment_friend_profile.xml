<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_user_profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendProfileFragment">

    <ImageButton
        android:id="@+id/imageButton_BackToFriends"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_FriendProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/label_Profile"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_FriendProfile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/default_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_FriendProfile" />

    <TextView
        android:id="@+id/textView_FriendProfileNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/label_Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_FriendProfile" />

    <TextView
        android:id="@+id/textView_FriendProfileFavWorkoutLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/label_FavoriteWorkout"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_FriendProfileNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_FriendProfileNameLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileGoalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/label_Goal"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_FriendProfileFavWorkoutLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_FriendProfileFavWorkoutLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileBioLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/label_Bio"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_FriendProfileGoalLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_FriendProfileGoalLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileNameLabel"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileNameLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileNameLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileFavWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileFavWorkoutLabel"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileFavWorkoutLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileFavWorkoutLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileGoalNumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileGoalLabel"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileGoalLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileGoalLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileGoalLabel1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileGoalNumber"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileGoalNumber"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileGoalNumber" />

    <TextView
        android:id="@+id/textView_FriendProfileGoalPer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/label_Per"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileGoalLabel1"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileGoalLabel1"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileGoalLabel1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView_FriendProfileGoalLabel2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileGoalPer"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileGoalPer"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileGoalPer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_FriendProfileBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileBioLabel"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileBioLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileBioLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileFriendsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/label_Friends"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_FriendProfileBioLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_FriendProfileBioLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileFriendsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileFriendsLabel"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileFriendsLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileFriendsLabel" />

    <TextView
        android:id="@+id/textView_FriendProfileFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/label_NumberFriends"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_FriendProfileFriendsNumber"
        app:layout_constraintStart_toEndOf="@+id/textView_FriendProfileFriendsNumber"
        app:layout_constraintTop_toTopOf="@+id/textView_FriendProfileFriendsNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>